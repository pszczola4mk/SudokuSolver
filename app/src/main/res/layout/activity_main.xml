<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">
	<ImageView
			android:layout_width="339dp"
			android:layout_height="309dp" app:srcCompat="@drawable/ic_launcher_background" android:id="@+id/image"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
			app:layout_constraintEnd_toEndOf="parent"/>
	<TextView
			android:layout_width="389dp"
			android:layout_height="229dp" android:id="@+id/sudoku" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
			app:layout_constraintTop_toBottomOf="@+id/image" android:layout_marginTop="20dp" android:scrollbars="vertical" android:scrollHorizontally="true" android:scrollbarSize="10dp"
			android:scrollbarStyle="outsideInset"/>
	<Button
			android:text="ZdjÄ™cie"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/photo" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp" android:layout_marginTop="10dp"
			app:layout_constraintTop_toBottomOf="@+id/sudoku"/>
	<Button
			android:text="Rozpoznaj"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/ocr" android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/sudoku" android:layout_marginEnd="10dp"
			app:layout_constraintEnd_toEndOf="parent"/>
	<Button
			android:text="RECZNIE"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/btn_grid" android:layout_marginStart="20dp" app:layout_constraintStart_toEndOf="@+id/photo" android:layout_marginTop="10dp"
			app:layout_constraintTop_toBottomOf="@+id/sudoku"/>
	<Button
			android:text="PLIK"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/btn_file" android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/photo" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>